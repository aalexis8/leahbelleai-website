---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { href: '/services#etl', label: 'ETL & Data Migration' },
    { href: '/services#modeling', label: 'Data Modeling' },
    { href: '/services#integration', label: 'Data Integration' },
  ],
  company: [
    { href: '/about', label: 'About Us' },
    { href: '/blog', label: 'Blog' },
    { href: '/contact', label: 'Contact' },
  ],
};
---

<footer class="bg-accent text-white">
  <div class="container py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="flex items-center mb-4">
          <img 
            src="/favicon.svg" 
            alt="LeahBelle AI Consulting" 
            class="h-10 w-auto brightness-0 invert"
          />
          <span class="ml-3 text-xl font-bold">
            LeahBelle AI Consulting
          </span>
        </a>
        <p class="text-gray-400 max-w-md">
          Expert data solutions for modern businesses. We help organizations transform their data infrastructure 
          with cutting-edge ETL, modeling, and integration services.
        </p>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Services</h4>
        <ul class="space-y-2">
          {footerLinks.services.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Company</h4>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-gray-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
